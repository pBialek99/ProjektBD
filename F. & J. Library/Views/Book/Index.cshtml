@model IEnumerable<F.___J._Library.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create">Add new book</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Publisher)
            </th>
            <th>
                Borrowed
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.PublisherId)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.IsBorrowed)
            </td>
                <td>
                    @if (User.IsInRole("Admin")) 
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    }

                    @Html.ActionLink("Details", "Details", new { id = item.Id })

                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
            </td>
            <!-- Wypozyczanie -->
            <td>
                    <!-- jesli nie jest jeszcze wypozyczona -->
                    @if (!item.IsBorrowed)
                    {
                        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                        {
                            @Html.ActionLink("Borrow", "Borrow", new { id = item.Id }, new { @class = "btn btn-success" })
                        }
                    }   
                    <!-- jesli jest juz wypozyczona -->
                    @if (item.IsBorrowed)
                    {
                        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                        {
                            @Html.ActionLink("Return", "Return", new { id = item.Id }, new { @class = "btn btn-danger" })
                        }
                    }
            </td>
        </tr>
}
    </tbody>
</table>
